@model Books.Models.Book

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="@Url.Content(Model.ImagePath)" class="card-img-top img-size img-responsive">
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(model => model.BookName)</h3>
                    @Html.DisplayNameFor(model => model.AuthorName):
                    @Html.DisplayFor(model => model.AuthorName)
                    <br />
                    @Html.DisplayNameFor(model => model.Price):
                    @Html.DisplayFor(model => model.Price)
                    <br />
                    @Html.DisplayFor(model => model.BookCategory):
                    @Html.DisplayFor(model => model.BookCategory)
                    <br />
                    @Html.DisplayNameFor(model => model.BookCondition):
                    @Html.DisplayFor(model => model.BookCondition)
                    <div class="card-footer">
                        @using (Html.BeginForm("AddToCart", "Book", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div>
                                    <input name="AddToCart" type="submit" value="Buy" class="btn btn-primary" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
