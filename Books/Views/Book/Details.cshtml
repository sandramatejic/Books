@model Books.Models.Book

@{
    ViewBag.Title = "Details";
    var ID = ViewBag.ID;
}

<h2>Details</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="@Url.Content(Model.ImagePath)" class="card-img-top img-size img-responsive">
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(model => model.BookName)</h3>
                    @Html.DisplayNameFor(model => model.AuthorName):
                    @Html.DisplayFor(model => model.AuthorName)
                    <br />
                    @Html.DisplayNameFor(model => model.Price):
                    @Html.DisplayFor(model => model.Price)
                    <br />
                    @Html.DisplayFor(model => model.BookCategory):
                    @Html.DisplayFor(model => model.BookCategory)
                    <br />
                    @Html.DisplayNameFor(model => model.BookCondition):
                    @Html.DisplayFor(model => model.BookCondition)
                    <div class="card-footer">
                        @using (Html.BeginForm("AddToCart", "ShoppingCart", FormMethod.Post))
                        {
                            <div>
                                @if (Model.Availability == "Sold")
                                {
                                    <h4>Sorry! This item is sold!</h4>
                                }
                                else
                                {
                                    <button name="idAdd" type="submit" value="@Model.ID" class="btn btn-primary">Add to Cart</button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", "Book")
</p>
